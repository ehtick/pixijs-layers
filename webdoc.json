
{
  "tags": {
    "allowUnknownTags": false
  },
  "source": {
    "include": [
      "src/**/*.ts"
    ]
  },
  "plugins": [
    "plugins/markdown"
  ],
  "template": {
    "readme": "./README.md",
    "repository": "https://github.com/pixijs/layers/"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": false
    },
    "applicationName": "PixiJS Layers",
    "copyright": "Copyright &copy; 2015 - 2022 Ivan Popelyshev",
    "linenums": false,
    "meta": {
      "title": "PixiJS Layers API Documentation",
      "description": "Documentation for PixiJS Layers library",
      "keyword": "docs, documentation, pixi, pixijs, rendering, pixi-layers, display, pixi-display, javascript, jsdoc"
    }
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": false
  },
  "opts": {
    "encoding": "utf8",
    "recurse": true,
    "private": false,
    "lenient": true,
    "destination": "docs",
    "template": "@pixi/webdoc-template"
  }
}